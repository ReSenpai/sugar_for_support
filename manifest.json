{ 
    "manifest_version": 2,
    "name": "support_sugar",
    "description":"Улучшения внутренних инструментов Okko",
    "version": "1.4.0", 
    "author": "Re Senpai",
    "permissions" : [
      "clipboardWrite",
      "tabs",
      "notifications",
      "*://*/*"
    ],
    "icons": {
      "48": "icon/48-ss.png",
      "128": "icon/128-ss.png"
    },
    "browser_action": {
        "default_icon": "icon/ss.png",
        "default_title": "Sugar for Support v. 1.3.1",
        "default_popup" : "templates/popup.html" },
    "background" : {
      "scripts" : ["js/background.js"],
      "persistent" : false
    },
    "web_accessible_resources": ["dark_mode.css"],
    "content_scripts": [
      {
        "css": ["css/CRM.css"],
        "js": ["js/jquery-3.5.0.min.js","js/CRM.js"],
        "matches": ["http://crm.spb.play.dc/users/*"]
      },
      {
        "css" : ["css/usedesk.css"],
        "matches": ["https://secure.usedesk.ru/*"]
      }
    ]
}